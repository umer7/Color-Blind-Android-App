<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/showLayout8"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="35dp"
            android:background="#1E88E5"
            android:text="Wrong Answer"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/org8"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainLayout8">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:src="@mipmap/before"
        android:background="#1E88E5"
        android:id="@+id/backBtn8"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:src="@mipmap/home"
        android:background="#1E88E5"
        android:id="@+id/homeBtn8"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#1E88E5"
        android:src="@mipmap/next"
        android:id="@+id/nextBtn8"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/test8"
        android:layout_centerHorizontal="true"
        android:id="@+id/image8"
        android:layout_below="@+id/backBtn8"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="What do you see ?"
        android:textSize="20dp"
        android:layout_below="@+id/image8"
        android:id="@+id/txt8"
        />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/input8"
        android:inputType="number"
        android:layout_below="@+id/txt8"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="CHECK"
        android:background="#1E88E5"
        android:id="@+id/checkBtn8"
        android:textColor="#fff"
        android:layout_below="@+id/input8"/>

    </RelativeLayout>
</RelativeLayout>